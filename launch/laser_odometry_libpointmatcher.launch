<launch>

  <!-- Launch node through valgrind/gdb. -->
  <arg name="debug" default="false"/>

  <!-- The input topic. -->
  <arg name="topic_in" default="/scan"/>

  <!-- A config file for the laser odometry node. -->
  <arg name="node_config_file" default="$(find laser_odometry_node)/config/laser_odometry_node_default.yaml"/>

  <!-- A config file for the LibPointMatcher class. -->
  <arg name="icp_config" default="$(find laser_odometry_libpointmatcher)/config/icp.yaml" />

  <include file="$(find laser_odometry_node)/launch/laser_odometry.launch">
    <arg name="debug" value="$(arg debug)"/>
    <arg name="laser_odometry_type" value="laser_odometry::LaserOdometryLibPointMatcher"/>
    <arg name="node_config_file" value="$(arg node_config_file)"/>
    <arg name="topic_in" value="$(arg topic_in)" />
<!--    <rosparam param="icp_config" subst_value="True">$(arg icp_config)</rosparam>-->
  </include>

  <rosparam param="libpointmatcher_config" subst_value="True">$(arg icp_config)</rosparam>

</launch>
